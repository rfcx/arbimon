{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@rfcx-bio/utils/*": ["../../utils/src/*"],
      "@rfcx-bio/common/*": ["../../common/src/*"],
      "~/*": ["./_services/*"],
      "@/*": ["./*"]
    },

    // Overrides
    "composite": false,
    "incremental": false,
    "types": ["vite/client", "@types/jest", "unplugin-icons/types/vue"],
    "target": "ESNext",
    "jsx": "preserve",
    "resolveJsonModule": true, // TODO 210 - Remove this once the mock API is removed
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    { "path": "../utils/tsconfig.build.json" },
    { "path": "../common/tsconfig.build.json" }
  ]
}
