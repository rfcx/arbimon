{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "../../",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "../../packages/*/src/**/*.ts",
    "./*.js",
    "./*.ts"
  ],
  "exclude": ["node_modules", "dist", "lib", ".*/**"]
}
