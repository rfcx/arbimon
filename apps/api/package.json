{
  "name": "@rfcx-bio/api",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf \"./lib\" \"./*.tsbuildinfo\" \"./*.tgz\"",
    "lint:eslint": "eslint . --cache",
    "lint:prettier": "prettier . --check",
    "lint": "concurrently -r -m 1 --kill-others-on-fail \"pnpm:lint:*\"",
    "lint-fix": "eslint . --fix && prettier . --loglevel warn --write",
    "open": "wait-port -t 10000 http://localhost:3000 && open-cli http://localhost:3000",
    "preview": "pnpm build && pnpm -r pack-api && pnpm use-packed && concurrently -r --kill-others-on-fail \"node --experimental-specifier-resolution=node lib/index.js\" \"pnpm open\"",
    "preview-reset": "rimraf \"./*.tgz\" && pnpm use-ws",
    "profile-eslint": "cross-env TIMING=1 eslint .",
    "serve": "cross-env TS_NODE_PROJECT=\"tsconfig.build.json\" nodemon --watch src -e ts --experimental-specifier-resolution=node --loader ./loader.js src/index.ts",
    "test": "vitest --run --passWithNoTests",
    "test-coverage": "vitest --run --coverage --passWithNoTests",
    "use-packed": "pnpm remove @rfcx-bio/common @rfcx-bio/utils && pnpm add ./*.tgz",
    "use-ws": "pnpm remove @rfcx-bio/common @rfcx-bio/utils && pnpm add @rfcx-bio/utils @rfcx-bio/common"
  },
  "dependencies": {
    "@rfcx-bio/common": "workspace:^0.0.1",
    "@rfcx-bio/utils": "workspace:^0.0.1",
    "axios": "^0.24.0",
    "dayjs": "^1.10.7",
    "fastify": "^3.23.1",
    "fastify-cors": "^6.0.2",
    "fastify-static": "^4.5.0",
    "lodash-es": "^4.17.21"
  },
  "description": "Biodiversity API",
  "homepage": "https://github.com/rfcx/biodiversity-analytics#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfcx/biodiversity-analytics.git"
  },
  "bugs": {
    "url": "https://github.com/rfcx/biodiversity-analytics/issues"
  },
  "keywords": [
    "biodiversity",
    "analytics",
    "rfcx",
    "rainforest",
    "connection"
  ],
  "devDependencies": {
    "pino-pretty": "^7.3.0"
  }
}
